@code {
    [Parameter] public int? Id { get; set; }
    private bool showToast = false;
    private string toastMessage;
    private string toastType;
    private ProductItem editItem = new();
    private List<Category> categories = new();

    protected override async Task OnInitializedAsync()
    {
        categories = await CategoryRepo.GetAllCategory();

        if (Id.HasValue && Id.Value > 0)
        {
            var item = (await ProductItemRepo.GetAllAsync()).FirstOrDefault(p => p.ProductItemId == Id.Value);
            if (item != null)
                editItem = new ProductItem
                {
                    ProductItemId = item.ProductItemId,
                    ProductItemName = item.ProductItemName,
                    CategoryId = item.CategoryId,
                    ImageData = item.ImageData,
                    UnitPrice=item.UnitPrice
                };
        }
    }
    private void GotoList()
    {
        NavManager.NavigateTo($"/ProductItemDesignonlyshow");
    }
    private async Task SaveProductItem()
    {
        if (string.IsNullOrWhiteSpace(editItem.ProductItemName)
            || editItem.CategoryId <= 0
          || (editItem.ImageData == null && string.IsNullOrWhiteSpace(editItem.FilePath)))
        {
            ShowToastWarming("Please fill all fields", "toast-waming");
            return;
        }
        // var duplicate = await ProductItemRepo.GetByNameAsync(editItem.ProductItemName);
        // if (duplicate == true)
        // {
        //     ShowToastWarming("Alreadys Exits !!", "toast-waming");
        //     return;
        // }

        if (editItem.ImageData != null && editItem.ImageData.Length > 0)
        {
            editItem.ImageData = CompressImage(editItem.ImageData, 70);
        }


        if (editItem.ProductItemId > 0)
        {
            await ProductItemRepo.UpdateAsync(editItem);
            ShowToast("Updated successfully", "toast-success");
        }
        else
        {
            await ProductItemRepo.AddAsync(editItem);
            ShowToast("Added successfully", "toast-success");
        }

       
    }

    private async Task OnImageSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file != null)
        {
            using var stream = file.OpenReadStream(5 * 1024 * 1024);
            using var ms = new MemoryStream();
            await stream.CopyToAsync(ms);
            editItem.ImageData = ms.ToArray();
        }
    }

    private byte[] CompressImage(byte[] originalImage, int quality = 70)
    {
        using var inputStream = new MemoryStream(originalImage);
        using var image = SixLabors.ImageSharp.Image.Load(inputStream);
        using var outputStream = new MemoryStream();
        var encoder = new JpegEncoder { Quality = quality };
        image.Save(outputStream, encoder);
        return outputStream.ToArray();
    }

    private void ShowToast(string message, string type)
    {
        toastMessage = message;
        toastType = type;
        showToast = true;
        StateHasChanged();
        _ = Task.Delay(1000).ContinueWith(_ =>
        {
            showToast = false;
            InvokeAsync(StateHasChanged);
            NavManager.NavigateTo("/ProductItemDesignonlyshow");
           
        });
    }
    private void ShowToastWarming(string message, string type)
    {
        toastMessage = message;
        toastType = type;
        showToast = true;
        StateHasChanged();
        _ = Task.Delay(1000).ContinueWith(_ =>
        {
            showToast = false;
            InvokeAsync(StateHasChanged);
        

        });
    }
    private void HideToast() => showToast = false;

    private string GetImageSource(byte[] imageData)
    {
        return imageData == null ? null : $"data:image/jpeg;base64,{Convert.ToBase64String(imageData)}";
    }
}
