@page "/ProductItemForm"
@page "/ProductItemForm/{Id:int}"
@using CakeByHtoo.Models
@using Microsoft.AspNetCore.Components.Forms
@using SixLabors.ImageSharp
@using SixLabors.ImageSharp.Formats.Jpeg
@using SixLabors.ImageSharp.Processing
@inject Interfaces.IProductItem ProductItemRepo
@inject Interfaces.ICategory CategoryRepo
@inject IJSRuntime JS
@inject NavigationManager NavManager

<!-- Toast Alert -->
<div class="toast-container">
    @if (showToast)
    {
        <div class="toast @toastType show">
            @toastMessage
            <button type="button" class="btn-close" @onclick="HideToast">&times;</button>
        </div>
    }
</div>

<section class="wishlist spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="wishlist__cart__table">

                    <h4>@(editItem?.ProductItemId > 0 ? "Edit Product Item" : "Add New Product Item")</h4>
                    <hr />

                    <EditForm Model="editItem" OnValidSubmit="SaveProductItem" class="p-4">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="card shadow-sm rounded-3">
                            <div class="card-body">

                                <!-- Product Name -->
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Product Name</label>
                                    <InputText @bind-Value="editItem.ProductItemName"
                                               class="form-control"
                                               placeholder="Enter product item name" />
                                </div>

                                <!-- Category -->
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Category</label>
                                    <select @bind="editItem.CategoryId" class="form-control">
                                        <option value="0">Select Category</option>
                                        @foreach (var cat in categories)
                                        {
                                            <option value="@cat.CategoryId">@cat.Name</option>
                                        }
                                    </select>
                                </div>

                                <!-- Image Upload -->
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Upload Image</label>
                                    <div class="p-3 border rounded bg-white d-flex flex-column align-items-start">
                                        <InputFile OnChange="OnImageSelected" class="form-control mb-2" accept="image/*" />

                                        @if (editItem.ImageData != null)
                                        {
                                            <img src="@GetImageSource(editItem.ImageData)"
                                                 alt="Preview"
                                                 class="shadow-sm border"
                                                 style="width:100px;height:100px;object-fit:cover;border-radius:10px;" />
                                        }
                                    </div>
                                </div>
                                @if (editItem.CategoryId != 1 && editItem.CategoryId != 2 )
                                {
                                    <!-- Unit Price -->
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Unit Price</label>
                                        <InputNumber @bind-Value="editItem.UnitPrice"
                                        class="form-control"
                                        placeholder="Enter product item name" />
                                    </div>
                                }
                                <!-- Buttons -->
                                <div class="d-flex justify-content-between">
                                    <button type="button" class="btn btn-secondary px-4"
                                            @onclick="() => GotoList()">
                                        Cancel
                                    </button>
                                    <button type="submit" class="btn btn-success px-4 shadow-sm">
                                        <i class="fa fa-check"></i> Save Change
                                    </button>
                                </div>

                            </div>
                        </div>
                    </EditForm>

                </div>
            </div>
        </div>
    </div>
</section>

<style>
