@code {
    private List<ProductItem> productItems = new();
    private List<ProductItem> pagedItems = new();

    private bool showToast = false;
    private string toastMessage;
    private string toastType;
    // Delete modal
    private bool showDeleteModal = false;
    private int sizeIdToDelete;

    private int currentPage = 1;
    private int pageSize = 10;
    private int totalPages = 1;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        productItems = await ProductItemRepo.GetAllAsync();
        totalPages = (int)Math.Ceiling((double)productItems.Count / pageSize);
        UpdatePagedItems();
    }

    private async void UpdatePagedItems()
    {
        pagedItems = productItems
            .Skip((currentPage - 1) * pageSize)
            .Take(pageSize)
            .ToList();
        await ScrollToTop();
    }
    private async Task ScrollToTop()
    {
        await JS.InvokeVoidAsync("window.scrollTo", 0, 0);
    }
    private void GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages)
        {
            currentPage = page;
            UpdatePagedItems();
        }
    }

    private void PreviousPage()
    {
        if (currentPage > 1)
        {
            currentPage--;
            UpdatePagedItems();
        }
    }

    private void NextPage()
    {
        if (currentPage < totalPages)
        {
            currentPage++;
            UpdatePagedItems();
        }
    }

    private void GoFirst()
    {
        currentPage = 1;
        UpdatePagedItems();
    }

    private void GoLast()
    {
        currentPage = totalPages;
        UpdatePagedItems();
    }

    private void AddProduct()
    {
        NavManager.NavigateTo("/ProductItemForm");
    }

    private void EditProduct(int productItemId)
    {
        NavManager.NavigateTo($"/ProductItemForm/{productItemId}");
    }

    private async Task ConfirmDelete(int id)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this product?");
        if (confirmed)
        {
            await ProductItemRepo.DeleteAsync(id);
            await LoadData();
        }
    }
    private void ShowDeleteModal(int id)
    {
        sizeIdToDelete = id;
        showDeleteModal = true;
    }


    private void CancelDelete()
    {
        sizeIdToDelete = 0;
        showDeleteModal = false;
    }

    private async Task DeleteConfirmed()
    {
        if (sizeIdToDelete != 0)
        {
            await ProductItemRepo.DeleteAsync(sizeIdToDelete);

            await LoadData();
            ShowToast("Deleted successfully", "toast-danger");

        }
        showDeleteModal = false;
        sizeIdToDelete = 0;
    }

    private void ShowToast(string message, string type)
    {
        toastMessage = message;
        toastType = type;
        showToast = true;
        StateHasChanged();
        _ = Task.Delay(3000).ContinueWith(_ =>
        {
            showToast = false;
            InvokeAsync(StateHasChanged);
        });
    }
    private void HideToast() => showToast = false;


    private string GetImageSource(byte[] imageData, string? FilePath)
    {
        if (imageData == null || imageData.Length == 0)
            return FilePath.Replace("\\", "/");  // fallback image

        var base64 = Convert.ToBase64String(imageData);
        return $"data:image/jpeg;base64,{base64}";
    }

}
