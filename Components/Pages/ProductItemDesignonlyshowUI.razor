@page "/ProductItemDesignonlyshow"
@using CakeByHtoo.Models
@inject Interfaces.IProductItem ProductItemRepo
@inject ICategory CategoryRepo
@inject NavigationManager NavManager
@inject IJSRuntime JS

<!-- Toast Alert -->
<div class="toast-container">
    @if (showToast)
    {
        <div class="toast @toastType show">
            @toastMessage
            <button type="button" class="btn-close" @onclick="HideToast">&times;</button>
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal @(showDeleteModal ? "show d-block" : "")" tabindex="-1">
    <div class="modal-dialog modal-center">
        <div class="modal-content shadow-lg border-0 rounded-3">
            <div class="modal-header border-0 justify-content-center">
                <i class="fa fa-exclamation-triangle fa-2x text-warning"></i>
                <h4 class="modal-title text-danger ml-2">Confirm Deletion</h4>
            </div>
            <div class="modal-body text-center">
                <p style="font-size:large">Are you sure you want to delete this item?</p>

            </div>
            <div class="modal-footer justify-content-center border-0">
                <button class="btn btn-outline-secondary rounded-pill px-4" @onclick="CancelDelete">
                    Cancel
                </button>
                <button class="btn btn-danger rounded-pill px-4" @onclick="DeleteConfirmed">
                    Yes, Delete
                </button>
            </div>
        </div>
    </div>
</div>


<section class="wishlist spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="wishlist__cart__table">

                    <div class="mb-3 text-end">
                        <button class="btn btn-outline-success" @onclick="AddProduct">
                            <i class="fa fa-plus"></i> Add New Product-Item
                        </button>
                    </div>

                    <!-- Product Item Table -->
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="width:20%">Image</th>
                                <th style="width:30%">Name</th>
                                <th style="width:20%">Category</th>
                                <th style="width:30%; text-align:center;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (pagedItems == null || !pagedItems.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted py-4">
                                        <i class="fa fa-info-circle"></i> No product items found.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var item in pagedItems)
                                {
                                    <tr>
                                        <td>
                                            <img src="@GetImageSource(item.ImageData,item.FilePath)" alt="Product Image"
                                                 style="width:60px; height:60px; object-fit:cover; border-radius:6px;" />
                                        </td>
                                        <td>@item.ProductItemName</td>
                                        <td>@item.Category?.Name</td>
                                        <td class="text-center">
                                            <button class="btn btn-sm btn-warning me-1"
                                                    @onclick="() => EditProduct(item.ProductItemId)">
                                                <i class="fa fa-pencil"></i>
                                            </button>
                                            <button class="btn btn-sm btn-danger"
                                                
                                                @onclick="() => ShowDeleteModal(item.ProductItemId)">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                    <!-- Pagination -->
                    @if (totalPages > 1)
                    {
                        <nav>
                            <ul class="pagination justify-content-end me-4">

                                <!-- First Page -->
                                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                    <button class="page-link" @onclick="GoFirst">First</button>
                                </li>

                                <!-- Previous Page -->
                                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                    <button class="page-link" @onclick="PreviousPage">Previous</button>
                                </li>

                                <!-- Page Numbers -->
                                @* @for (int i = 1; i <= totalPages; i++)
                                {
                                    <li class="page-item @(i == currentPage ? "active" : "")">
                                        <button class="page-link" @onclick="() => GoToPage(i)">@i</button>
                                    </li>
                                } *@
                                @for (int i = 1; i <= totalPages; i++)
                                {
                                    var pageIndex = i;  // capture current i in a local variable
                                    <li class="page-item @(pageIndex == currentPage ? "active" : "")">
                                        <button class="page-link" @onclick="() => GoToPage(pageIndex)">@pageIndex</button>
                                    </li>
                                }


                                <!-- Next Page -->
                                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                    <button class="page-link" @onclick="NextPage">Next</button>
                                </li>

                                <!-- Last Page -->
                                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                    <button class="page-link" @onclick="GoLast">Last</button>
                                </li>

                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </div>
    </div>
</section>


