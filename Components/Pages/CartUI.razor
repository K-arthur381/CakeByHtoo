@code {
    private List<Cart> cartItems;
    // Toast
    private bool showToast = false;
    private string toastMessage;
    private string toastType;

    // Delete modal
    private bool showDeleteModal = false;
    private int sizeIdToDelete;

    protected override async Task OnInitializedAsync()
    {
        await LoadCart();
    }
    private void GoToUpdatePage(int cartId)
    {
        Nav.NavigateTo($"/UpdateCart/{cartId}");
    }

    private void GotoCheckoutpage()
    {
        Nav.NavigateTo($"/CheckOut");
    }
   
    private async Task LoadCart()
    {
        cartItems = await CartRepo.GetAllCarts();
        StateHasChanged();
    }

    private string GetImageSource(byte[] imageData, string? FilePath)
    {
        if (imageData == null || imageData.Length == 0)
            return FilePath.Replace("\\", "/");  // fallback image

        var base64 = Convert.ToBase64String(imageData);
        return $"data:image/jpeg;base64,{base64}";
    }

