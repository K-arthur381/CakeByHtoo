    private void ShowDeleteModal(int id)
    {
        sizeIdToDelete = id;
        showDeleteModal = true;
    }

    private void CancelDelete()
    {
        sizeIdToDelete = 0;
        showDeleteModal = false;
    }

    private async Task DeleteConfirmed()
    {
        if (sizeIdToDelete != 0)
        {
             await CartRepo.DeleteCart(sizeIdToDelete);
           
                await LoadCart();
                cartItems = await CartRepo.GetAllCarts();

                CartState.SetCartItems(cartItems);

                StateHasChanged();
                ShowToast("Deleted successfully", "toast-danger");
            
        }
        showDeleteModal = false;
        sizeIdToDelete = 0;
    }

    private void ShowToast(string message, string type)
    {
        toastMessage = message;
        toastType = type;
        showToast = true;
        StateHasChanged();
        _ = Task.Delay(3000).ContinueWith(_ =>
        {
            showToast = false;
            InvokeAsync(StateHasChanged);
        });
    }

    private void HideToast() => showToast = false;


    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("initMainJs");
        }
    }
