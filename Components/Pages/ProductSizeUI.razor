@code {
    private List<ProductSize> sizes = new();
    private List<ProductSize> filteredSizes = new();
    private List<Category> categories = new();
    private ProductSize newSize = new();
    private ProductSize editSize;
    private int selectedCategoryId = 0;

    // Toast
    private bool showToast = false;
    private string toastMessage;
    private string toastType;

    // Delete modal
    private bool showDeleteModal = false;
    private int sizeIdToDelete;

    protected override async Task OnInitializedAsync()
    {
        sizes = await SizeRepo.GetAllAsync();
        categories = await CatRepo.GetAllCategory();

        // Initialize filtered sizes with all sizes
        filteredSizes = sizes.ToList();

        // Auto-select first category if exists
        if (categories.Any())
        {
            selectedCategoryId = categories.First().CategoryId;
            newSize.CategoryId = selectedCategoryId;
        }
    }

    private void SelectCategory(int categoryId)
    {
        selectedCategoryId = categoryId;
        newSize.CategoryId = categoryId;
        FilterSizes();
    }

    private void FilterSizes()
    {
        if (selectedCategoryId == 0)
        {
            // Show all sizes
            filteredSizes = sizes.ToList();
        }
        else
        {
            // Filter by selected category
            filteredSizes = sizes.Where(s => s.CategoryId == selectedCategoryId).ToList();
        }
        StateHasChanged();
    }

    private async Task AddSize()
    {
        if (string.IsNullOrWhiteSpace(newSize.Size) || newSize.CategoryId == 0)
        {
            ShowToast("Please select category and enter size", "toast-warning");
            return;
        }

        if (sizes.Any(s => s.Size.Equals(newSize.Size, StringComparison.OrdinalIgnoreCase) &&
                           s.CategoryId == newSize.CategoryId))
        {
            ShowToast("Size already exists for this category", "toast-warning");
            return;
        }

        var success = await SizeRepo.AddAsync(newSize);
        if (success)
        {
            sizes = await SizeRepo.GetAllAsync();
            FilterSizes(); // Refresh filtered list
            ShowToast("Size added successfully", "toast-success");
            newSize = new ProductSize();
            newSize.CategoryId = selectedCategoryId; // Keep the current category selection
        }
        else
        {
            ShowToast("Failed to add size", "toast-danger");
        }
    }

    private void StartEdit(ProductSize size)
    {
        editSize = new ProductSize
            {
                ProductSizeId = size.ProductSizeId,
                Size = size.Size,
                CategoryId = size.CategoryId
            };
    }

    private void CancelEdit() => editSize = null;

    private async Task SaveEditSize(ProductSize size)
    {
        var success = await SizeRepo.UpdateAsync(editSize);
        if (success)
        {
            sizes = await SizeRepo.GetAllAsync();
            FilterSizes(); // Refresh filtered list
            ShowToast("Updated successfully", "toast-success");
        }
        else
        {
            ShowToast("Update failed", "toast-danger");
        }
        editSize = null;
    }

    private void ShowDeleteModal(int id)
    {
        sizeIdToDelete = id;
        showDeleteModal = true;
    }

    private void CancelDelete()
    {
        sizeIdToDelete = 0;
        showDeleteModal = false;
    }

    private async Task DeleteConfirmed()
    {
        if (sizeIdToDelete != 0)
        {
            var success = await SizeRepo.DeleteAsync(sizeIdToDelete);
            if (success)
            {
                sizes = await SizeRepo.GetAllAsync();
                FilterSizes(); // Refresh filtered list
                ShowToast("Deleted successfully", "toast-danger");
            }
        }
        showDeleteModal = false;
        sizeIdToDelete = 0;
    }

    private void ShowToast(string message, string type)
    {
        toastMessage = message;
        toastType = type;
        showToast = true;
        StateHasChanged();
        _ = Task.Delay(3000).ContinueWith(_ =>
        {
            showToast = false;
            InvokeAsync(StateHasChanged);
        });
    }

    private void HideToast() => showToast = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try { await JS.InvokeVoidAsync("initMainJs"); } catch { }
        }
    }
}